@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Passwort ändern";
}

<h2 class="text-primary">Passwort ändern</h2>

<form method="post">
    <div class="mb-3">
        <label>Aktuelles Passwort</label>
        <input asp-for="CurrentPassword" type="password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Neues Passwort</label>
        <input asp-for="NewPassword" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Speichern</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
        <div class="alert alert-success mt-3">@Model.Message</div>
}
