@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Registrierte Benutzer</h2>

<table class="table">
    <tr>
        <th>Email</th>
        <th>Benutzername</th>
        <th>Aktionen</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Löschen</a>
            </td>
        </tr>
    }
</table>
